<% if user_signed_in? %>
  <script>document.location.href = '/home'</script>
<% else %>
    <style>
        body {
            background: linear-gradient( rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/bg.jpg') no-repeat center center fixed;
            -webkit-background: cover;
            -moz-background: cover;
            -o-background:cover;
            background-size:cover;
        }
        h1 {
            color:white;
            font-weight:bold;
        }
        h3 {
            font-weight:bold;
        }
        .center{
            margin-left:10%;
            margin-right:5%;
        }
        .container-index {
            margin-right:15%;
            margin-left:15%;
        }
        .text {
            color:white;
            font-weight:300;
            font-size:130%;
        }
        .log-in {
            float:right;
            width:240px;
            height: 180px;
        }
        .sign-up {
            float:right;
            width:240px;
            height: 260px;
        }
        .footer-links {
            color: white;
            text-align:center;
            margin-top:5%;
            font-size:75%;
            font-weight:200;
        }
        .btn-danger{
            float:right;
            margin-top: -20px;
            margin-right: 25px;
            font-weight:bold;
            
        }
        .btn-warning{
            float:right;
            margin-top:5px;
            margin-right:25px;
            font-weight:bold;
            color:black;
        }
        .form-control {
            margin-bottom:5px;
            max-width:80%;
        }
    </style>
    <div class="container-index row">
        <div class="col-sm-6">
        <h1>Welcome to Twitter Clone</h1>
        <p class="text">
            Connect with your friends — and other fascinating people. 
            Get in-the-moment updates on the things that interest you.<br> 
            And watch events unfold, in real time,<br> from every angle.
        </p>
        </div>
        <div class="col-sm-6">
            <div class="log-in panel">
                <h3 class="center">Log In</h3>
                <%= form_for(resource, :class =>"form-group form", as: resource_name, url: session_path(resource_name)) do |f| %>
                  
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, placeholder: "E-mail", :class => "form-control center" %>
                  </div>
                
                  <div class="field">
                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "form-control center" %>
                  </div>
                
                  <% if devise_mapping.rememberable? -%>
                    <div class="field center">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
                
                  <div class="actions">
                    <%= f.submit "Log in" ,:class => "btn btn-danger center" %>
                  </div>
                <% end %>

            </div>
            <div class="sign-up panel">
                <h3 class="center">Sign Up</h3>
                <%= form_for(resource, :class =>"form-group form", as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                
                  <div class="field">
                    <%= f.text_field :username, autofocus: true, placeholder: "Username", :class => "form-control center" %>
                  </div>
                
                  <div class="field">
                    <%= f.email_field :email, placeholder:"E-mail Adress", :class => "form-control center" %>
                  </div>
                
                  <div class="field">
                    <% if @minimum_password_length %>
                    <span>(<%= @minimum_password_length %> characters minimum)</span>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "off",placeholder:"Password", :class => "form-control center" %>
                  </div>
                
                  <div class="field">
                    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm Password", :class => "form-control center" %>
                  </div>
                
                  <div class="actions">
                    <%= f.submit "Sign up", :class => "btn btn-warning center" %>
                  </div>
                <% end %>
            </div>
        </div>
        
        <div class="col-sm-12">
            <p class="footer-links">About Help Blog Status Jobs Terms Privacy Cookies Ads info Brand Advertise Businesses Media Developers Directory © 2017 Twitter</p>
        </div>
    </div>
<% end %>